import arcade
from Snake import Snake
from Variable import *
import time
from apple import Apple


class MyGame(arcade.Window):

    def __init__(self, width, height, title):
        super().__init__(width, height, title)

        #add snake
        self.snake = Snake()
        self.snake.add_body(3, 4)
        self.snake.add_body(2, 4)
        self.direction = 1
        self.grid = []
        self.defeat = False

        self.apple = Apple()
        self.apple.prodece(self.snake)


        for row in range(ROW_COUNT):
            self.grid.append([])
            for column in range(COLUMN_COUNT):
                self.grid[row].append(0)  # Append a cell

        self.add_snake_to_grid()

        arcade.set_background_color(arcade.color.BLACK)


    def add_snake_to_grid(self):
        for i in range(self.snake.length):
            row = self.snake.body[i][0]
            col = self.snake.body[i][1]
            self.grid[row][col] = SNAKE

        if self.apple.score == 1:
            apple_x = self.apple.x
            apple_y = self.apple.y
            self.grid[apple_x][apple_y] = APPLE
        elif self.apple.score == 5:
            apple_x = self.apple.x
            apple_y = self.apple.y
            self.grid[apple_x][apple_y] = APPLE5




    def on_draw(self):
        """
        Render the screen.
        """

        # This command has to happen before we start drawing
        arcade.start_render()

        # Draw the grid
        if self.defeat:
            arcade.set_background_color(arcade.color.WHITE)
            arcade.draw_text("LOSE", 50, 50, arcade.color.BLACK)
            return

        for row in range(ROW_COUNT):
            for column in range(COLUMN_COUNT):
                # Figure out what color to draw the box
                if self.grid[row][column] == SNAKE:
                    color = arcade.color.GREEN
                elif self.grid[row][column] == APPLE:
                    color = arcade.color.RED
                elif self.grid[row][column] == APPLE5:
                    color = arcade.color.GOLD
                else:
                    color = arcade.color.WHITE

                x = (MARGIN + WIDTH) * column + MARGIN + WIDTH // 2
                y = (MARGIN + HEIGHT) * row + MARGIN + HEIGHT // 2

                arcade.draw_rectangle_filled(x, y, WIDTH, HEIGHT, color)

        arcade.draw_text("WHAT", 100, 100, arcade.color.BLACK, font_size=12)

    #only for testing purpose
    #Don't use it in real app
    def clear_grid(self):
        for i in range(ROW_COUNT):
            for j in range(COLUMN_COUNT):
                self.grid[i][j] = 0


    def update(self, delta_time: float):

        if self.defeat:
            return

        self.clear_grid()

        self.defeat = self.snake.update(self.direction)
        # time.sleep(10/1000)


    def on_key_press(self, key: int, modifiers: int):
        if key == arcade.key.UP:
            self.direction = UP
        elif key == arcade.key.DOWN:
            self.direction = DOWN
        elif key == arcade.key.LEFT:
            self.direction = LEFT
        elif key == arcade.key.RIGHT:
            self.direction = RIGHT

def main():

    window = MyGame(SCREEN_WIDTH, SCREEN_HEIGHT, TITLE)
    arcade.run()


if __name__ == "__main__":
    main()

